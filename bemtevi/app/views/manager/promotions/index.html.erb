<% content_for :head do %>
  <%= stylesheet_link_tag "bemtevi/active-template" %>
  <!-- <%= javascript_include_tag "bemtevi/active-templates" %> -->
<% end %>

<div id="promo-panel" class="list-panel" >
	<div class="header" >
	  <p>Suas promoções ativas</p>
    <a href="/manager/promotions/new" id="new-promo-btn" title="criar promoção">criar promoção</a>
  </div>

	<div id="tpl-container">

    <% @promotions.each do |promotion| %>
    <% promotion.promotion_images.each do |promotion_image| %>
    <% if promotion_image.attachment_aspect_ratio < 1 %>
      <% image_url = promotion_image.attachment.url(:medium) %>
    <% end %>

    <div class="tpl-list-item inactive" id="tpl-list-item_<%= promotion.id %>">
      <%= image_tag(image_url, title: promotion.name) if promotion.promotion_images.count > 0 %>
      <!--
      <div>
        <a href="#" class="duplicate-template-btn" title="Duplicar">Duplicar</a>
        <a href="#" class="deactive-template-btn" title="Desativar">Desativar</a>
        <a href="#" class="active-template-btn" title="Ativar">Ativar</a>
        <a href="#" class="edit-template-btn" title="Editar">Editar</a>
      </div>
    -->
      <label>Val. <%= promotion.starts_at.to_date.to_formatted_s(:short) %> - <%= promotion.expires_at.to_date.to_formatted_s(:short) %></label>
    </div>

    <% end %>


    
    <div class="tpl-list-item inactive" id="tpl-list-item_0">
      <img src="/images/bemtevi/temp/templates/thumbs/f1t1-thumb.jpg">
      <div>
        <a href="#" class="duplicate-template-btn" title="Duplicar">Duplicar</a>
        <a href="#" class="deactive-template-btn" title="Desativar">Desativar</a>
        <a href="#" class="active-template-btn" title="Ativar">Ativar</a>
        <a href="#" class="edit-template-btn" title="Editar">Editar</a>
      </div>
      <label>Val. 10/10/2012 0</label>
    </div>
  </div>
    <div id="pagination" >
        <a href="#" class="first" title="Primeiro" ><<</a>
        <a href="#" class="prior" title="Anterior" ><</a>
        <a href="#" class="next" title="Próximo" >></a>
        <a href="#" class="last" title="Último" >>></a>
    </div>
</div>
