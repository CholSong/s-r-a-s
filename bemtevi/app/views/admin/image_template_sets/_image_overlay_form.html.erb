<div class="yui-u <%= field_set_position == 1 ? :first : "" %> overlay_images_conatainer_div">
  <fieldset >
    <legend><%= t(f.object.tag) %></legend>
    <%= f.hidden_field :tag %>
    <%= f.label t(:position) %>
    <%= f.text_field :position_x, :size => 4 %> X, <%= f.text_field :position_y, :size => 4 %> Y<br />
    <%= f.label t(:dimension) %>
    <%= f.text_field :width, :size => 4 %> <%= t(:width) %>, <%= f.text_field :height, :size => 4 %> <%= t(:height) %><br />
    <p />
    <%= f.fields_for :image_overlay do |img_overlay_form| %>
      <% if( @type == "detail" ) %>
        <% @detail_img_overlay.overlay_images.build %>
        <%= render :partial => 'multi_image_form',:locals => { :form => img_overlay_form } %>
      <% else %>
        <% @summarry_img_overlay.overlay_images.build %>
        <%= render :partial => 'multi_image_form',:locals => { :form => img_overlay_form } %>
      <% end %>
    <% end %>
  </fieldset>
</div>
