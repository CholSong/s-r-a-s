<%= render "shared/error_messages", :target => @vendor %>

<%= form_for(:vendor, :url => collection_url, :html => { :multipart => true }) do |f| %>
<fieldset>

  <%= f.field_container :name do %>
    <%= f.label :name, t("name") %> <span class="required">*</span><br />
    <%= f.text_field :name, :class => 'fullwidth title'  %>
    <%= f.error_message_on :name %>
  <% end %>
  
  <%= f.field_container :latitude do %>
    <%= f.label :latitude, t("latitude") %> <span class="required">*</span><br />
    <%= f.text_field :latitude, :class => 'fullwidth title'  %>
    <%= f.error_message_on :latitude %>
  <% end %>

  <%= f.field_container :longitude do %>
    <%= f.label :longitude, t("longitude") %> <span class="required">*</span><br />
    <%= f.text_field :longitude, :class => 'fullwidth title'  %>
    <%= f.error_message_on :longitude %>
  <% end %>

  <%= f.field_container :description do %>
    <%= f.label :description, t("description")%><br />
    <%= f.text_area :description, {:cols => 60, :rows => 4, :class => 'fullwidth'} %>
    <%= f.error_message_on :description %>
  <% end %>
      
  <%= render :partial => 'admin/shared/new_resource_links' %>

</fieldset>
<% end %>
