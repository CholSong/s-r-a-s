<h1><%== t("editing_promotion") + " &ldquo;#{@promotion.name}&rdquo;" %></h1>

<% content_for :sidebar do %>

  <h3><%= @vendor.name %></h3>
  <br class="clear" />

  <ul class="sidebar product-menu">
    <%= hook :admin_vendor_tabs, {:current => current} do %>

      <li<%== ' class="active"' if current == "Vendor Details" %>>
        <%= link_to t("vendor_details"), edit_admin_vendor_url(@vendor) %>
      </li>
      <li<%== ' class="active"' if current == "Images" %>>
        <%= link_to t("images"), admin_vendor_vendor_images_url(@vendor) %>
      </li>
      
    <% end %>
  </ul>
  <br class="clear" />

<% end %>