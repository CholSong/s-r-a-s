<h4><%= t("new_image") %></h4>

<% if !params[:from_template] then %>
  <%= form_for(:image, :url => { :controller => 'images', :action => 'create' }, :html => { :multipart => true }) do |form| %>
    <table class="basic-table">
      <%= render :partial => "form", :locals => { :f => form } %>
    </table>
    <p class="form-buttons">
      <%= button t("update") %>
      <%= t('or') %> <%= link_to t("cancel"), "#", :id => "cancel_link" %>
    </p>
  <% end %>
<% else %>
  <%= render :partial => "form_for_template" %>
<% end %>

<script type="text/javascript">    
  jQuery('#cancel_link').click(function (event) { 
    jQuery('#new_image_link').show();
    jQuery('#new_image_from_template_link').show();
    jQuery('#images').html('');
  });  
 
</script>

 
 
